<%- include ("partials/header") %>
<div class = "container">
	<h1 style="text-align:center;">
		Add A New Comment To <%= camp.name %>
	</h1>
	<div style="width:30%; margin:25 auto;">
		<form action = "/campgrounds/<%= camp.id%>/comments" method="POST">
			<div class="form-group">
				<input class = "form-control" type = "text" name="comment[comment]" placeholder = "Comment" >
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-primary btn-block" type = "Submit" >
			</div>
			
		</form>
		<a href = "/campgrounds">Go Back</a>
	</div>
	
</div>