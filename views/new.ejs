<%- include ("partials/header") %>
<div class = "container">
	<h1 style="text-align:center;">
		Add A New Campground
	</h1>
	<div style="width:30%; margin:25 auto;">
		<form action = "/campgrounds" method="POST">
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[name]" placeholder = "Name" >
			</div>
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[image]" placeholder = "Image" >
			</div>
			<div class="form-group">
				<input class = "form-control" type = "number" name="campground[price]" placeholder = "Price in $" min="0.01" step = "0.01" >
			</div>
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[body]" placeholder = "Body" >
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-primary btn-block" type = "Submit" >
			</div>
			
		</form>
		<a href = "/campgrounds">Go Back</a>
	</div>
	
</div>