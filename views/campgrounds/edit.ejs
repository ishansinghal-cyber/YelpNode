<%- include ("../partials/header") %>
<div class = "container">
	<h1 style="text-align:center;">
		Edit Campground <%= campground.name %>
	</h1>
	<div style="width:30%; margin:25 auto;">
		<form action = "/campgrounds/<%=campground.id %>/?_method=PUT" method="POST">
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[name]" placeholder = "Name" value="<%=campground.name %>">
			</div>
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[image]" placeholder = "Image" value="<%=campground.image %>">
			</div>
			<div class="form-group">
				<input class = "form-control" type = "text" name="campground[body]" placeholder = "Body" value="<%=campground.body %>">
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-primary btn-block" type = "Submit" >
			</div>
			
		</form>
		<a href = "/campgrounds">Go Back</a>
	</div>
	
</div>